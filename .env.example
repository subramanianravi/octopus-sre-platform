# ==============================================
# 🐙 Octopus SRE Platform Configuration
# ==============================================

# 🔑 API Keys (REQUIRED)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# 🐙 Platform Settings
OCTOPUS_ENVIRONMENT=development
OCTOPUS_VERSION=1.0.0
LOG_LEVEL=INFO

# 🔒 Security
REDIS_PASSWORD=octopus-redis-secure-password
GRAFANA_PASSWORD=octopus-admin-password
JWT_SECRET_KEY=your-super-secure-jwt-secret-key

# 🎛️ Feature Flags
FEATURE_AUTO_REMEDIATION=true
FEATURE_PREDICTIVE_ANALYTICS=true
FEATURE_REAL_TIME_LEARNING=true
FEATURE_ADVANCED_SECURITY=true
FEATURE_MULTI_TENTACLE_COORDINATION=true

# 📊 Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
JAEGER_ENABLED=true

# 🔧 Performance
BRAIN_MEMORY_LIMIT=4Gi
TENTACLE_MEMORY_LIMIT=2Gi
MAX_CONCURRENT_TASKS=100
WORKER_THREADS=20
